{
    "id": "registration_flow_config_basic_google_github",
    "type": "REGISTRATION",
    "nodes": [
        {
            "id": "choose_auth",
            "type": "DECISION",
            "next": [
                "basic_auth",
                "google_auth",
                "github_auth"
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "username",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "password",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "next": [
                "provisioning"
            ]
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "code",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "nonce",
                    "type": "string",
                    "required": false
                }
            ],
            "executor": {
                "name": "GoogleOIDCAuthExecutor",
                "idpName": "Google"
            },
            "next": [
                "provisioning"
            ]
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "code",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "GithubOAuthExecutor",
                "idpName": "Github"
            },
            "next": [
                "provisioning"
            ]
        },
        {
            "id": "provisioning",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "sub",
                    "type": "string",
                    "required": true
                },
                {
                    "name": "email",
                    "type": "string",
                    "required": true
                }
            ],
            "executor": {
                "name": "ProvisioningExecutor"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
